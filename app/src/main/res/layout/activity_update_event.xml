<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:padding="20dp">

    <!-- Header -->
    <ImageView
        android:id="@+id/iv_back"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/ic_arrow_back"
        app:tint="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"/>

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Update Event"
        android:textColor="@color/black"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginTop="24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_back" />

    <!-- Form Fields -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_title"
        app:layout_constraintBottom_toTopOf="@+id/ll_buttons">

        <!-- Title Input -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@drawable/bg_rounded_border"
            android:gravity="center_vertical"
            android:paddingHorizontal="12dp"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp">
            <ImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_create_title" />
            <EditText
                android:id="@+id/et_event_title"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/transparent"
                android:hint="Event Title"
                android:paddingHorizontal="12dp"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:text="International Band Music Concert"/>
        </LinearLayout>

        <!-- Time Input -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@drawable/bg_rounded_border"
            android:gravity="center_vertical"
            android:paddingHorizontal="12dp"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp">
            <ImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_create_time" />
            <EditText
                android:id="@+id/et_event_time"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/transparent"
                android:hint="Event Time"
                android:paddingHorizontal="12dp"
                android:inputType="none"
                android:focusable="false"
                android:clickable="true"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:text="14 December, 2021"/>
        </LinearLayout>

        <!-- Location Input -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@drawable/bg_rounded_border"
            android:gravity="center_vertical"
            android:paddingHorizontal="12dp"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp">
            <ImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_create_location" />
            <EditText
                android:id="@+id/et_event_location"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/transparent"
                android:hint="Event Location"
                android:paddingHorizontal="12dp"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:text="Gala Convention Center"/>
        </LinearLayout>

        <!-- Image Picker -->
        <LinearLayout
            android:id="@+id/ll_image_picker"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@drawable/bg_rounded_border"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingHorizontal="12dp"
            android:layout_marginBottom="16dp">
            <TextView
                android:id="@+id/tv_image_path"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Choose a Picture for your Event"
                android:textColor="@color/text_secondary"
                android:paddingHorizontal="8dp"
                android:textSize="14sp"/>
            <ImageView
                android:id="@+id/iv_camera_trigger"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_create_camera" />
        </LinearLayout>

        <!-- Description Input -->
        <EditText
            android:id="@+id/et_event_description"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:background="@drawable/bg_rounded_border"
            android:gravity="top|start"
            android:hint="Event description..."
            android:padding="16dp"
            android:layout_marginBottom="16dp"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:text="Enjoy your favorite dishes with your friends and family and have a great time. Food from local food trucks will be available for purchase."/>

    </LinearLayout>

    <!-- Buttons -->
    <LinearLayout
        android:id="@+id/ll_buttons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/navigation_include"
        android:layout_marginBottom="16dp">

        <Button
            android:id="@+id/btn_close"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:layout_marginEnd="8dp"
            android:text="Close"
            android:backgroundTint="#E0E0E0"
            android:textColor="@color/black"
            android:textAllCaps="false"/>

        <Button
            android:id="@+id/btn_update"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:layout_marginStart="8dp"
            android:text="Update"
            android:backgroundTint="@color/purple_custom"
            android:textColor="@color/white"
            android:textAllCaps="false"/>

    </LinearLayout>

    <include
        android:id="@+id/navigation_include"
        layout="@layout/layout_bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
